{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "webpack.config.js",
    "jest",
    "./**/*.spec.tsx"
  ]
}
